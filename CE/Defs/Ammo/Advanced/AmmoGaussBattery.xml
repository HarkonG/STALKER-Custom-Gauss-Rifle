<?xml version="1.0" encoding="utf-8" ?>
<Defs>


    <!-- ==================== Ammo Categories ==================== -->

    <CombatExtended.AmmoCategoryDef>
        <defName>GaussBatteryHomemade</defName>
        <label>Homemade Gauss Battery</label>
