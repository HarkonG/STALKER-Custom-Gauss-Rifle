        <description>Battery used by advanced Gauss rifle designs.</description>
    </CombatExtended.AmmoCategoryDef>

    <CombatExtended.AmmoCategoryDef>
        <defName>GaussBatteryIndustrial</defName>
        <label>Industrial Gauss Battery</label>
